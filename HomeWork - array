// task-157

#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const int N = 7;
    int a[N];
    int sum = 0;

    cout << "Ввод массива целых чисел\n";
    cout << "После ввода каждого числа нажмите <Enter>\n";

    // Ввод массива
    for (int i = 0; i < N; i++) {
        cout << "a[" << i << "] -> ";
        cin >> a[i];
        sum += a[i];
    }

    // Вывод массива
    cout << "Массив: ";
    for (int i = 0; i < N; i++) {
        cout << a[i] << " ";
    }
    cout << endl;

    // Среднее арифметическое
    double average = (double)sum / N;

    cout << fixed << setprecision(2);
    cout << "Среднее арифметическое: " << average << endl;

    return 0;
}

