// task-158

#include <iostream>
using namespace std;

int main() {
    const int SIZE = 5;
    int a[SIZE];
    int count = 0;

    cout << "Введите массив целых чисел.\n";
    cout << "После ввода каждого числа нажимайте <Enter>\n";

    for (int i = 0; i < SIZE; i++) {
        cout << "a[" << i + 1 << "] -> ";
        cin >> a[i];
        if (a[i] != 0)
            count++;
    }

    cout << "В массиве " << count << " ненулевых элемента\n";
    return 0;
}

