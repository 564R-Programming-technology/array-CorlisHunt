// task-164

#include <iostream>
using namespace std;

int main() {
    const int N = 5;
    int a[N];      // массив
    int sample;    // образец для поиска
    bool found = false;
    int index = -1;

    cout << "Поиск в массиве методом перебора\n";
    cout << "Введите в одной строке " << N
         << " целых чисел и нажмите <Enter>\n";
    cout << "-> ";
    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    cout << "Введите образец для поиска (целое число) -> ";
    cin >> sample;

    // поиск простым перебором
    for (int i = 0; i < N; i++) {
        if (a[i] == sample) {
            found = true;
            index = i;
            break;
        }
    }

    if (found) {
        cout << "Совпадение с элементом номер " << index + 1 << endl;
    } else {
        cout << "Совпадений с образцом нет\n";
    }

    return 0;
}

