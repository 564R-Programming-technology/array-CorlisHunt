// task-160

#include <iostream>
using namespace std;

int main() {
    int a[5];
    cout << "Введите 5 целых чисел\n-> ";
    for (int i = 0; i < 5; i++) cin >> a[i];

    int* min = a;
    for (int i = 1; i < 5; i++)
        if (*(a+i) < *min) min = a+i;

    cout << "Минимальный элемент массива: " << *min << endl;
    return 0;
}

