// task-159

#include <iostream>
using namespace std;

int main() {
    const int N = 5;
    int a[N];
    int minIndex = 0;

    cout << "Поиск минимального элемента массива\n";
    cout << "Введите в одной строке " << N 
         << " целых чисел и нажмите <Enter>\n";
    cout << "-> ";

    // Ввод массива
    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    // Поиск минимального элемента
    for (int i = 1; i < N; i++) {
        if (a[i] < a[minIndex]) {
            minIndex = i;
        }
    }

    cout << "Минимальный элемент массива: " 
         << a[minIndex] << endl;

    return 0;
}

