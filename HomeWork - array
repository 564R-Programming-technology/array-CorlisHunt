// task-163

#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const char* days[] = {
        "Понедельник","Вторник","Среда",
        "Четверг","Пятница","Суббота","Воскресенье"
    };

    float t, sum = 0;
    for (int i = 0; i < 7; i++) {
        cout << days[i] << " -> ";
        cin >> t;
        sum += t;
    }

    cout << fixed << setprecision(2);
    cout << "Средняя температура за неделю: "
         << sum / 7 << " град.\n";
}

