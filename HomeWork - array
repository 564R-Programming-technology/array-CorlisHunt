// task-165

#include <iostream>
using namespace std;

int main() {
    const int N = 5;
    int a[N];
    bool ok = true;

    cout << "Проверка, упорядочен ли массив\n";
    cout << "по возрастанию\n";
    cout << "Введите массив (" << N << " целых чисел в одной строке) и нажмите <Enter>\n";

    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    for (int i = 0; i < N - 1; i++) {
        if (a[i] > a[i + 1]) {
            ok = false;
            break;
        }
    }

    cout << "Элементы массива ";
    if (!ok)
        cout << "не ";
    cout << "упорядочены по возрастанию\n";

    return 0;
}

//----------------------------------------------------------------------------------------------

// task-166

#include <iostream>
using namespace std;

int main() {
    const int N = 5;
    int a[N];     // массив
    int obr;      // искомое число
    int count = 0;

    cout << "Введите массив (" << N << " целых чисел в одной строке)\n";
    cout << "-> ";
    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    cout << "Введите образец для сравнения -> ";
    cin >> obr;

    for (int i = 0; i < N; i++) {
        if (a[i] == obr)
            count++;
    }

    if (count > 0)
        cout << "Число " << obr << " встречается в массиве " << count << " раз\n";
    else
        cout << "Ни один элемент массива не равен образцу\n";

    return 0;
}

//----------------------------------------------------------------------------------------------

// task-167

#include <iostream>
using namespace std;

int main() {
    const int N = 5;   // размер массива
    int a[N];
    bool same = false;

    cout << "Введите массив (" << N << " целых чисел в одной строке)\n";
    cout << "-> ";
    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    // Проверка на одинаковые элементы
    for (int i = 0; i < N - 1 && !same; i++) {
        for (int j = i + 1; j < N; j++) {
            if (a[i] == a[j]) {
                same = true;
                break;
            }
        }
    }

    if (same)
        cout << "В массиве есть элементы с одинаковым значением\n";
    else
        cout << "Все элементы массива различны\n";

    return 0;
}
