// task-161

#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const int SIZE = 10;
    int a[SIZE];
    int sum = 0;
    int count = 0;

    cout << "Введите элементы массива (10 целых чисел в одной строке)\n";
    cout << "и нажмите <Enter>\n";
    cout << "-> ";

    for (int i = 0; i < SIZE; i++) {
        cin >> a[i];
        if (a[i] != 0) {
            sum += a[i];
            count++;
        }
    }

    cout << "Сумма элементов массива: " << sum << endl;
    cout << "Количество ненулевых элементов: " << count << endl;

    if (count > 0) {
        double avg = (double)sum / count;
        cout << fixed << setprecision(2);
        cout << "Среднее арифметическое ненулевых элементов: " << avg << endl;
    } else {
        cout << "Ненулевых элементов нет.\n";
    }

    return 0;
}

//----------------------------------------------------------------------------------------------

// task-162

#include <iostream>
using namespace std;

int main() {
    const int SIZE = 10;
    int a[SIZE];
    int min, max;
    int sum = 0;

    cout << "Среднее арифметическое без учета min и max значений\n";
    cout << "Введите массив (10 целых чисел в одной строке)\n";
    cout << "-> ";

    // Ввод массива
    for (int i = 0; i < SIZE; i++) {
        cin >> a[i];
    }

    // Инициализация min и max
    min = max = a[0];

    // Поиск min и max
    for (int i = 1; i < SIZE; i++) {
        if (a[i] < min) min = a[i];
        if (a[i] > max) max = a[i];
    }

    // Сумма без min и max
    for (int i = 0; i < SIZE; i++) {
        sum += a[i];
    }

    sum -= (min + max);

    double average = sum / double(SIZE - 2);

    cout << "Минимальный элемент: " << min << endl;
    cout << "Максимальный элемент: " << max << endl;
    cout.setf(ios::fixed);
    cout.precision(2);
    cout << "Среднее арифм. без учета min и max значений: "
         << average << endl;

    return 0;
}

